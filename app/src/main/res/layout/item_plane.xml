<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/background_color"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/container_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/img_avatar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/container_item"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Hãng:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Loại:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/layout_1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >


            <TextView
                android:id="@+id/textTenHang"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textTenLoai"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/layout_1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sức Chứa:" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Mã:" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/layout_1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:id="@+id/textSucChua"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                />
            <TextView
                android:id="@+id/textMaMayBay"
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:text="TextView" />
        </LinearLayout>


            <ImageView

                android:id="@+id/iconCheckActive"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:src="@drawable/check"

                />


    </LinearLayout>


</RelativeLayout>