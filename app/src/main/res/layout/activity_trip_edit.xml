<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transport_ing_background_noradius"
        android:contentDescription="background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/shape_rounded_container_top_20_fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Sửa Chuyến"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171">

        <EditText
            android:id="@+id/textSuaNoiDi"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_rounded_input_5"
            android:ems="10"
            android:hint="Nơi Đi"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColorHint="@color/input"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container" />


        <EditText
            android:id="@+id/textSuaNoiDen"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="43dp"
            android:background="@drawable/selector_rounded_input_5"
            android:ems="10"
            android:hint="Nơi Đến"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColorHint="@color/input"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSuaNoiDi" />
    </LinearLayout>

    <EditText
        android:id="@+id/textSuaBatDau"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="492dp"
        android:background="@drawable/selector_rounded_input_5"
        android:drawableRight="@drawable/ic_calendar"
        android:ems="10"
        android:hint="Ngày Bắt Đầu"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textColorHint="@color/input"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textSuaKetThuc"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="420dp"
        android:autofillHints="email"
        android:background="@drawable/selector_rounded_input_5"
        android:drawableRight="@drawable/ic_calendar"
        android:ems="10"
        android:hint="Ngày Kết Thúc"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textColorHint="@color/input"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutGiaVe"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@+id/textSuaKetThuc"
        app:layout_constraintVertical_bias="0.074">

        <EditText
            android:id="@+id/textSuaGiaEconomy"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_rounded_input_5"
            android:ems="10"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColorHint="@color/input"
            android:textSize="16sp"
            android:hint="Giá Economy"
            />

        <EditText
            android:layout_marginStart="43dp"
            android:id="@+id/textSuaGiaBusiness"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_rounded_input_5"
            android:ems="10"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColorHint="@color/input"
            android:hint="Giá Business"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toBottomOf="@+id/layoutGiaVe"
        app:layout_constraintVertical_bias="0.074">

        <EditText
            android:id="@+id/textSuaSoLuongEconomy"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_rounded_input_5"
            android:ems="10"
            android:hint="SL Economy"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColorHint="@color/input"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/textSuaSoLuongBusiness"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="43dp"
            android:background="@drawable/selector_rounded_input_5"
            android:ems="10"
            android:hint="SL Business"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:textColorHint="@color/input"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/submitEditTrip"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/shape_rounded_btn_5_0194f3"
        android:text="Sửa"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/container" />

    <Button
        android:id="@+id/backEditTripToList"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_rounded_btn_5_0194f3"
        android:text="Xem Danh Sách"
        android:textAllCaps="false"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/listEditPlane"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="212dp"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>